<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans"
        android:textColor="@color/colorUniversal"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_weight="50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            android:textColorHint="@color/colorUniversal"
            app:boxStrokeColor="@color/colorUniversal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            app:boxCornerRadiusBottomEnd="5sp"
            app:boxCornerRadiusBottomStart="5sp"
            app:boxCornerRadiusTopEnd="5sp"
            app:boxCornerRadiusTopStart="5sp"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website"
                android:fontFamily="@font/product_sans"
                android:textColor="@color/colorUniversal"
                android:id="@+id/website_details"
                android:inputType="textWebEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_weight="50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            android:textColorHint="@color/colorUniversal"
            app:boxStrokeColor="@color/colorUniversal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            app:boxCornerRadiusBottomEnd="5sp"
            app:boxCornerRadiusBottomStart="5sp"
            app:boxCornerRadiusTopEnd="5sp"
            app:boxCornerRadiusTopStart="5sp"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year of creation"
                android:fontFamily="@font/product_sans"
                android:textColor="@color/colorUniversal"
                android:id="@+id/year_details"
                android:inputType="phone"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorUniversal"
            app:boxStrokeColor="@color/colorUniversal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            app:boxCornerRadiusBottomEnd="5sp"
            app:boxCornerRadiusBottomStart="5sp"
            app:boxCornerRadiusTopEnd="5sp"
            app:boxCornerRadiusTopStart="5sp"
            android:layout_weight="50"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:fontFamily="@font/product_sans"
                android:id="@+id/phone_details"
                android:textColor="@color/colorUniversal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorUniversal"
            app:boxStrokeColor="@color/colorUniversal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            app:boxCornerRadiusBottomEnd="5sp"
            app:boxCornerRadiusBottomStart="5sp"
            app:boxCornerRadiusTopEnd="5sp"
            app:boxCornerRadiusTopStart="5sp"
            android:layout_weight="50"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Turnover"
                android:fontFamily="@font/product_sans"
                android:id="@+id/turnover_details"
                android:textColor="@color/colorUniversal"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorUniversal"
            app:boxStrokeColor="@color/colorUniversal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            app:boxCornerRadiusBottomEnd="5sp"
            app:boxCornerRadiusBottomStart="5sp"
            app:boxCornerRadiusTopEnd="5sp"
            app:boxCornerRadiusTopStart="5sp"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Overview"
                android:inputType="textMultiLine"
                android:fontFamily="@font/product_sans"
                android:id="@+id/overview_details"
                android:textColor="@color/colorUniversal"/>

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:hintEnabled="true"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorUniversal"
        app:boxStrokeColor="@color/colorUniversal"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        app:boxCornerRadiusBottomEnd="5sp"
        app:boxCornerRadiusBottomStart="5sp"
        app:boxCornerRadiusTopEnd="5sp"
        app:boxCornerRadiusTopStart="5sp"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Services provided (csv)"
            android:inputType="textMultiLine"
            android:fontFamily="@font/product_sans"
            android:id="@+id/servicesProvided_details"
            android:textColor="@color/colorUniversal"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:hintEnabled="true"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorUniversal"
        app:boxStrokeColor="@color/colorUniversal"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        app:boxCornerRadiusBottomEnd="5sp"
        app:boxCornerRadiusBottomStart="5sp"
        app:boxCornerRadiusTopEnd="5sp"
        app:boxCornerRadiusTopStart="5sp"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Services required (csv)"
            android:inputType="textMultiLine"
            android:id="@+id/servicesRequired_details"
            android:fontFamily="@font/product_sans"
            android:textColor="@color/colorUniversal"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="csv = comma separated values"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorUniversal"
        android:fontFamily="@font/product_sans"
        android:layout_marginStart="20sp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/colorUniversal"
        app:cornerRadius="5sp"
        android:text="FINISH"
        android:fontFamily="@font/product_sans"
        android:textColor="#fff"
        style="@style/Widget.MaterialComponents.Button"
        android:onClick="addDetails"
        android:textStyle="bold"/>


</LinearLayout>